@using SubspaceStats.Areas.League.Models.Season
@using SubspaceStats.Areas.League.Models.Season.Round
@model SeasonRoundViewModel

@{
    ViewData["Title"] = "Delete Season Round";
}

<h1>Delete Season Round</h1>

<div class="mb-3">
    <a asp-controller="Season" asp-action="Rounds" asp-route-seasonId="@Model.Season.SeasonId">Back to Season Rounds</a>
</div>

<div class="container">
    <form asp-action="Delete">
        <h4>Delete round from</h4>
        <div class="ms-3">
            <div class="mb-3">
                <label class="form-label">Season</label>
                <input asp-for="Season.SeasonName" class="form-control" disabled readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">League</label>
                <input asp-for="League.Name" class="form-control" disabled readonly />
            </div>
        </div>
        <h4>Round info</h4>
        <div class="ms-3">
            <div class="mb-3">
                <label asp-for="Round.RoundNumber" class="form-label"></label>
                <input asp-for="Round.RoundNumber" class="form-control" disabled readonly />
            </div>
            <div class="mb-3">
                <label asp-for="Round.RoundName" class="form-label"></label>
                <input asp-for="Round.RoundName" class="form-control" disabled readonly />
            </div>
            <div class="mb-3">
                <label asp-for="Round.RoundDescription" class="form-label"></label>
                <textarea asp-for="Round.RoundDescription" class="form-control" disabled readonly></textarea>
            </div>
        </div>
        <div class="d-flex">
            <button type="submit" class="btn btn-primary m-2">Delete</button>
            <a asp-controller="Season" asp-action="Rounds" asp-route-seasonId="@Model.Season.SeasonId" class="btn btn-secondary m-2">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}