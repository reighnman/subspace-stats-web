@using SubspaceStats.Areas.League.Models.Season
@using SubspaceStats.Areas.League.Models.Season.Round
@model SeasonRoundViewModel

@{
    ViewData["Title"] = "Add Season Round";
}

<h1>Add Season Round</h1>

<div class="mb-3">
    <a asp-controller="Season" asp-action="Rounds" asp-route-seasonId="@Model.Season.SeasonId">Back to Season Rounds</a>
</div>

<div class="container">
    <form asp-action="Create">
        <h4>Add a new round to</h4>
        <div class="ms-3">
            <div class="mb-3">
                <label class="form-label">Season</label>
                <input asp-for="Season.SeasonName" class="form-control" disabled readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">League</label>
                <input asp-for="League.Name" class="form-control" disabled readonly />
            </div>
        </div>
        <h4>Round info</h4>
        <div class="ms-3">
            <partial name="_CreateFormInputs" model="Model.Round" />
        </div>
        <div class="d-flex">
            <button type="submit" class="btn btn-primary m-2">Create</button>
            <a asp-controller="Season" asp-action="Rounds" asp-route-seasonId="@Model.Season.SeasonId" class="btn btn-secondary m-2">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}