@using SubspaceStats.Areas.League.Models
@using SubspaceStats.Areas.League.Models.SeasonGame
@model GameViewModel

@{
    ViewData["Title"] = "Add Season Game";
}

<h1>Add Season Game</h1>

<div class="mb-3">
    <a asp-controller="Season" asp-action="Games" asp-route-seasonId="@Model.Season.SeasonId">Back to Season Rounds</a>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4 order-md-2">
            <div class="alert alert-info">
                <div class="mb-3">Use this form to add a match.</div>
                <div class="mb-3">For a new match, to be played in the future, set the status to <em>Pending</em>. Then, specify the teams and their freqs.</div>
                <div class="mb-3">For an already played match that you're inputting historical data in for, set the status to <em>Complete</em>, and specify all fields: teams, freqs, scores, and winner(s).</div>
            </div>
        </div>
        <div class="col-md-8 order-md-1">
            <form id="gameForm" asp-action="Create">
                <h4>Add a game to</h4>
                <div class="ms-3 mb-3">
                    <label class="form-label">Season</label>
                    <input type="text" class="form-control" value="@Model.Season.SeasonName" disabled readonly />
                    <label class="form-label">League</label>
                    <input type="text" class="form-control" value="@Model.League.Name" disabled readonly />
                </div>
                <h4>Game info</h4>
                <div class="ms-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <div>
                            <label asp-for="Game.RoundNumber" class="form-label"></label>
                            <input asp-for="Game.RoundNumber" class="form-control" />
                            <span asp-validation-for="Game.RoundNumber" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="Game.GameTimestamp" class="form-label"></label>
                            <input asp-for="Game.GameTimestamp" class="form-control" />
                            <span asp-validation-for="Game.GameTimestamp" class="text-danger"></span>
                        </div>
                        <div>
                            <div>
                                <label asp-for="Game.Status" class="form-label"></label>
                            </div>
                            <div class="ms-3">
                                <div>
                                    <input asp-for="Game.Status" type="radio" value="@GameStatus.Pending" id="gameStatusPending" />
                                    <label for="gameStatusPending">Pending -  a new game to be played in the future</label>
                                </div>
                                <div>
                                    <input asp-for="Game.Status" type="radio" value="@GameStatus.Complete" id="gameStatusComplete" />
                                    <label for="gameStatusComplete">Complete - a past game that you're filling in historical data for</label>
                                </div>
                                <div>
                                    <span asp-validation-for="Game.Status" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div>
                            @await Html.PartialAsync("_TeamsEditor")
                        </div>
                    </div>
                    <div class="d-flex">
                        <button type="submit" class="btn btn-primary m-2">Add</button>
                        <a asp-controller="Season" asp-action="Games" asp-route-seasonId="@Model.Season.SeasonId" class="btn btn-secondary m-2">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_TeamsEditorScript");
    }
}