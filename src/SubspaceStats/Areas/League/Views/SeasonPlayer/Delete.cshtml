@using SubspaceStats.Areas.League.Models.Season
@using SubspaceStats.Areas.League.Models.Season.Player
@model SeasonPlayerViewModel

@{
    ViewData["Title"] = "Delete Season Player";
    IEnumerable<SelectListItem> teams =
        from team in Model.Teams.Values
        select new SelectListItem(team.TeamName, team.TeamId.ToString());
}

<h1>Delete Season Player</h1>

<div class="mb-3">
    <a asp-controller="Season" asp-action="Players" asp-route-seasonId="@Model.Season.SeasonId">Back to Season Rounds</a>
</div>

<div class="container">
    <form asp-action="Delete">
        <h4>Delete player from</h4>
        <div class="ms-3">
            <div class="mb-3">
                <label class="form-label">Season</label>
                <input asp-for="Season.SeasonName" class="form-control" disabled readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">League</label>
                <input asp-for="Season.LeagueName" class="form-control" disabled readonly />
            </div>
        </div>
        <h4>Player info</h4>
        <div class="ms-3 mb-3">
            <input name="playerId" value="@Model.Model.PlayerId" type="hidden" />
            <div class="mb-3">
                <label asp-for="Model.PlayerName" class="form-label"></label>
                <input asp-for="Model.PlayerName" class="form-control" disabled readonly />
            </div>
            <div class="mb-3">
                <label asp-for="Model.TeamId" class="form-label"></label>
                <select asp-for="Model.TeamId" asp-items="@teams" class="form-select" aria-describedby="game-type-note" disabled>
                    <option value=""></option>
                </select>
            </div>
            <div class="mb-3 form-check">
                <input asp-for="Model.IsCaptain" class="form-check-input" disabled readonly />
                <label asp-for="Model.IsCaptain" class="form-check-label"></label>
            </div>
            <div class="mb-3 form-check">
                <input asp-for="Model.IsSuspended" class="form-check-input" disabled readonly />
                <label asp-for="Model.IsSuspended" class="form-check-label"></label>
            </div>
        </div>
        <div class="d-flex">
            <button type="submit" class="btn btn-primary m-2">Delete</button>
            <a asp-controller="Season" asp-action="Players" asp-route-seasonId="@Model.Season.SeasonId" class="btn btn-secondary m-2">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}