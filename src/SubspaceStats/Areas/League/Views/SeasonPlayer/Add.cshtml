@using SubspaceStats.Areas.League.Models.Season
@using SubspaceStats.Areas.League.Models.SeasonPlayer
@model AddPlayersViewModel

@{
    ViewData["Title"] = "Add Season Players";
    IEnumerable<SelectListItem> teams =
        from team in Model.Teams.Values
        select new SelectListItem(team.TeamName, team.TeamId.ToString());
}

<h1>Add Season Players</h1>

<div class="mb-3">
    <a asp-controller="Season" asp-action="Players" asp-route-seasonId="@Model.Season.SeasonId">Back to Season Rounds</a>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6 order-md-2">
            <div class="alert alert-info">
                <ul>
                    <li>Enter one or more <strong>Player Names</strong> to add, one per line.</li>
                    <li>If you enter an invalid name, it will tell you the line # when you submit.</li>
                    <li>If a <strong>Team</strong> is chosen, all of the players will be added to that team.</li>
                    <li>This form only adds new player signups. If you enter a player that is already signed up, that player will be skipped. The existing record will not be updated (even if the team differs).</li>
                </ul>
            </div>
        </div>
        <div class="col-md-6 order-md-1">
            <h4>To add players</h4>
            <div class="ms-3 mb-3">
                <label class="form-label">Season</label>
                <label class="form-control">@Model.Season.SeasonName</label>
                <label class="form-label">League</label>
                <label class="form-control">@Model.Season.LeagueName</label>
            </div>
            <h4>Fill in</h4>
            <div class="ms-3">
                <form asp-action="Add">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="PlayerNames" class="form-label"></label>
                        <textarea asp-for="PlayerNames" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="PlayerNames" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="TeamId" class="form-label"></label>
                        <select asp-for="TeamId" asp-items="@teams" class="form-select" aria-describedby="game-type-note">
                            <option value=""></option>
                        </select>
                        <span asp-validation-for="TeamId" class="text-danger"></span>
                    </div>
                    <div class="d-flex">
                        <button type="submit" class="btn btn-primary m-2">Add</button>
                        <a asp-controller="Season" asp-action="Players" asp-route-seasonId="@Model.Season.SeasonId" class="btn btn-secondary m-2">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}