@using SubspaceStats.Areas.League.Models.League
@model LeagueViewModel

@{
    ViewData["Title"] = "Delete League";

    IEnumerable<SelectListItem> gameTypes =
        from kvp in Model.GameTypes
        select new SelectListItem(kvp.Value.Id.ToString(), kvp.Key.ToString());
}

@await Html.PartialAsync("_LeagueNav")

<h1>Delete League</h1>

<div class="mb-3">
    <a asp-action="Index">Back to League List</a>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6 order-md-2">
            <div class="alert alert-info">
                Deleting a league is not a normal operation.
                Though it can be done, rather than make it easy to wipe everything by accident,
                you must first manually delete everything it contains.
                This includes every season in the league, which means you also will need to manually delete each season's content too.

            </div>
        </div>
        <div class="col-md-6 order-md-1">
            <form asp-action="Delete">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="League.Id" class="form-label"></label>
                    <input asp-for="League.Id" class="form-control" disabled readonly />
                </div>
                <div class="mb-3">
                    <label asp-for="League.Name" class="form-label"></label>
                    <input asp-for="League.Name" class="form-control" disabled readonly />
                </div>
                <div class="mb-3">
                    <label asp-for="League.GameTypeId" class="form-label"></label>
                    <select asp-for="League.GameTypeId" asp-items="@gameTypes" class="form-select" disabled>
                        <option disabled selected>-- Select a Game Type --</option>
                    </select>
                    <span asp-validation-for="League.GameTypeId" class="text-danger"></span>
                </div>
                <div class="d-flex">
                    <button type="submit" class="btn btn-primary m-2">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary m-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}