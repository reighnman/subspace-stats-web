@using Microsoft.Extensions.Options
@using SubspaceStats.Areas.League.Models.Franchise
@using SubspaceStats.Areas.League.Models.Season
@using SubspaceStats.Options
@inject IOptions<LeagueOptions> leagueOptions
@model TeamsViewModel

@{
	ViewData["Title"] = "Manage Teams";
}

@await Html.PartialAsync("_LeagueSeasonChooser", Model.LeagueSeasonChooser)
@await Html.PartialAsync("_SeasonNav")
@* <h1>Manage Teams</h1> *@

<div class="mb-3">
	<a asp-controller="Team" asp-action="Create" asp-route-seasonId="@Model.SeasonDetails.SeasonId" class="mx-2 text-nowrap">Add Team</a>
</div>

<div class="table-responsive">
	<table class="table table-striped table-bordered table-hover">
		<thead>
			<tr>
				<th>Team Name</th>
				<th>Banner (small)</th>
				<th>Banner (large)</th>
				<th>Is Enabled</th>
				<th>Franchise</th>
				<th colspan="2">Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var team in Model.Teams.Values)
			{
				<tr>
					<td><a asp-controller="Team" asp-action="Index" asp-route-teamId="@team.TeamId" class="link-underline link-underline-opacity-0 link-underline-opacity-75-hover">@team.TeamName</a></td>
					<td>
						@if (!string.IsNullOrWhiteSpace(team.BannerSmall))
						{
							<img src="@($"{leagueOptions.Value.ImageUrlPath}/TeamBanners/{team.TeamId}/{team.BannerSmall}")" asp-append-version="true" />
						}
					</td>
					<td>
						@if (!string.IsNullOrWhiteSpace(team.BannerLarge))
						{
							<img src="@($"{leagueOptions.Value.ImageUrlPath}/TeamBanners/{team.TeamId}/{team.BannerLarge}")" asp-append-version="true" />
						}
					</td>
					<td>@team.IsEnabled</td>
					<td>
						@if (team.FranchiseId is not null)
						{
							string? franchiseName = Model.Franchises.TryGetValue(team.FranchiseId.Value, out FranchiseModel? franchise) ? franchise.Name : team.FranchiseId.ToString();
							<a asp-controller="Franchise" asp-action="Details" asp-route-franchiseId="@team.FranchiseId">@franchiseName</a>
						}
					</td>
					<td><a asp-controller="Team" asp-action="Edit" asp-route-teamId="@team.TeamId">Edit</a></td>
					<td><a asp-controller="Team" asp-action="Delete" asp-route-teamId="@team.TeamId">Delete</a></td>
				</tr>
			}
		</tbody>
	</table>
</div>

@section Scripts {
	@await Html.PartialAsync("_LeagueSeasonChooseScript", Model.LeagueSeasonChooser)
}
