@using SubspaceStats.Areas.League.Models.Season
@model SeasonViewModel

@{
    ViewData["Title"] = "Delete Season";
}

<h1>Delete Season</h1>

<div class="mb-3">
    <a asp-action="Details" class="mx-2">Season Details</a>
    <a asp-controller="League" asp-action="Details" asp-route-leagueId="@Model.League.Id" class="mx-2">League Details</a>
</div>

<div class="container">
    <form asp-action="Delete">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="League.Name" class="form-label"></label>
            <input asp-for="League.Name" class="form-control" disabled readonly />
        </div>
        <div class="mb-3">
            <label asp-for="Model.SeasonName" class="form-label"></label>
            <input asp-for="Model.SeasonName" class="form-control" disabled readonly />
        </div>
        <div class="d-flex">
            <button type="submit" class="btn btn-primary m-2">Delete</button>
            <a asp-controller="League" asp-action="Details" asp-route-leagueId="@Model.League.Id" class="btn btn-secondary m-2">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}