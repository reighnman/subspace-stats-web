@using SubspaceStats.Areas.League.Models.Season
@model CreateSeasonViewModel

@{
    ViewData["Title"] = "New Season";
}

<h1>New Season</h1>

<div class="mb-3">
    <a asp-controller="League" asp-action="Index">League List</a>
</div>

<div class="container">
    <form asp-action="Create">
        <h4>Create season in</h4>
        <div class="ms-3">
            <label asp-for="League.Name" class="form-label"></label>
            <input asp-for="League.Name" class="form-control" disabled readonly />
        </div>
        <h4>Season info</h4>
        <div class="ms-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Season.SeasonName" class="form-label"></label>
                <input asp-for="Season.SeasonName" class="form-control" />
                <span asp-validation-for="Season.SeasonName" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex">
            <button type="submit" class="btn btn-primary m-2">Create</button>
            <a asp-controller="League" asp-action="Index" class="btn btn-secondary m-2">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}