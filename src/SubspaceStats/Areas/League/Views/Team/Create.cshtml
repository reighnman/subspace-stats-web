@using SubspaceStats.Areas.League.Models.Team
@model CreateTeamViewModel

@{
    ViewData["Title"] = "New Team";
    IEnumerable<SelectListItem> franchises =
        from franchise in Model.Franchises.Values
        select new SelectListItem(franchise.Name, franchise.Id.ToString());
}

<h1>New Team</h1>

<div class="mb-3">
    <a asp-controller="Season" asp-action="Teams" asp-route-seasonId="@Model.Season.SeasonId">Back to Season Teams</a>
</div>

<div class="container">
    <form asp-action="Create" enctype="multipart/form-data">
        <h4>Create a new team for</h4>
        <div class="ms-3">
            <div class="mb-3">
                <label class="form-label">League</label>
                <input type="text" value="@Model.Season.LeagueName" class="form-control" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Season</label>
                <input type="text" value="@Model.Season.SeasonName" class="form-control" readonly />
            </div>
        </div>
        <h4>With the following values</h4>
        <div class="ms-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Model.TeamName" class="form-label"></label>
                <input asp-for="Model.TeamName" class="form-control" />
                <span asp-validation-for="Model.TeamName" class="text-danger"></span>
            </div>
            @if (Model.ImageUploadsEnabled)
            {
                <div class="mb-3">
                    <label asp-for="Model.BannerSmall" class="form-label"></label>
                    <input asp-for="Model.BannerSmall" class="form-control" />
                    <span asp-validation-for="Model.BannerSmall" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Model.BannerLarge" class="form-label"></label>
                    <input asp-for="Model.BannerLarge" class="form-control" />
                    <span asp-validation-for="Model.BannerLarge" class="text-danger"></span>
                </div>
            }
            <div class="mb-3">
                <label asp-for="Model.FranchiseId" class="form-label"></label>
                <select asp-for="Model.FranchiseId" asp-items="@franchises" class="form-select" aria-describedby="game-type-note">
                    <option value=""></option>
                </select>
                <span asp-validation-for="Model.FranchiseId" class="text-danger"></span>
            </div>
            <div class="d-flex">
                <button type="submit" class="btn btn-primary m-2">Create</button>
                <a asp-controller="Season" asp-action="Teams" asp-route-seasonId="@Model.Season.SeasonId" class="btn btn-secondary m-2">Cancel</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}