@using Microsoft.Extensions.Options
@using SubspaceStats.Areas.League.Models.Franchise
@using SubspaceStats.Areas.League.Models.Season.Team
@using SubspaceStats.Options
@inject IOptions<LeagueOptions> leagueOptions
@model DeleteTeamViewModel

@{
    ViewData["Title"] = "Delete Season Team";
    string? franchiseName = Model.Franchise?.Name ?? Model.Model.FranchiseId?.ToString();
}

<h1>Delete Season Team</h1>

<div class="mb-3">
    <a asp-controller="Season" asp-action="Teams" asp-route-seasonId="@Model.Season.SeasonId">Back to Season Teams</a>
</div>

<div class="container">
    <form asp-action="Delete" enctype="multipart/form-data">
        <h4>Delete team from</h4>
        <div class="ms-3">
            <div class="mb-3">
                <label class="form-label">Season</label>
                <input asp-for="Season.SeasonName" class="form-control" disabled readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">League</label>
                <input asp-for="Season.LeagueName" class="form-control" disabled readonly />
            </div>
        </div>
        <h4>Team info</h4>
        <div class="ms-3">
            <div class="mb-3">
                <label asp-for="Model.TeamName" class="form-label"></label>
                <input asp-for="Model.TeamName" class="form-control" disabled readonly />
            </div>
            <div class="mb-3">
                <label asp-for="Model.BannerSmall" class="form-label"></label>
                @if (!string.IsNullOrWhiteSpace(Model.Model.BannerSmall))
                {
                    <img src="@($"{leagueOptions.Value.ImageUrlPath}/TeamBanners/{Model.Model.TeamId}/{Model.Model.BannerSmall}")" asp-append-version="true" />
                }
            </div>
            <div class="mb-3">
                <label asp-for="Model.BannerLarge" class="form-label"></label>
                @if (!string.IsNullOrWhiteSpace(Model.Model.BannerLarge))
                {
                    <img src="@($"{leagueOptions.Value.ImageUrlPath}/TeamBanners/{Model.Model.TeamId}/{Model.Model.BannerLarge}")" asp-append-version="true" />
                }
            </div>
            <div class="mb-3">
                <label asp-for="Model.FranchiseId" class="form-label"></label>
                <input type="text" value="@franchiseName" class="form-control" disabled readonly />
            </div>
            <div class="d-flex">
                <button type="submit" class="btn btn-primary m-2">Delete</button>
                <a asp-controller="Season" asp-action="Teams" asp-route-seasonId="@Model.Season.SeasonId" class="btn btn-secondary m-2">Cancel</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}