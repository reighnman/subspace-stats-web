@using SubspaceStats.Areas.League.Models.Franchise
@model FranchiseModel

@{
    ViewData["Title"] = "Edit Franchise";
}

@await Html.PartialAsync("_FranchiseNav")

<h1>Edit Franchise</h1>

<div class="mb-3">
    <a asp-action="Index" class="mx-2">Back to Franchise List</a>
</div>

<div class="container">
    <form asp-controller="Franchise" asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Id" class="form-label"></label>
            <input type="number" class="form-control" value="@Model.Id" disabled />
            <input asp-for="Id" type="hidden" />
        </div>
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="d-flex">
            <button type="submit" class="btn btn-primary m-2">Save</button>
            <a asp-action="Index" class="btn btn-secondary m-2">Cancel</a>
        </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}