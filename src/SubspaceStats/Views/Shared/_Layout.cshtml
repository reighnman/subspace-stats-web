@using Microsoft.Extensions.Options
@using SubspaceStats.Options;
@using SubspaceStats.Services
@inject IOptions<StatOptions> statOptions
@inject IStatsRepository statsRepository
<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nexus Stats</title>
    <script type="text/javascript">
        (function () {
            var htmlElement = document.querySelector('html');
            function refreshColorMode() {
                htmlElement.setAttribute('data-bs-theme', window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
            }
            window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', refreshColorMode);
            refreshColorMode();
        })();
    </script>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SubspaceStats.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-body-tertiary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Nexus Stats</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @{
                            var gameTypes = await statsRepository.GetGameTypesAsync(Context.RequestAborted);
                            foreach (long gameTypeId in statOptions.Value.Navbar.LeaderboardGameTypes)
                            {
                                string gameTypeName = gameTypes.TryGetValue(gameTypeId, out GameType? gameType) ? gameType.Name : gameTypeId.ToString();
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Leaderboard" asp-action="Index" asp-route-gameType="@gameTypeId">@gameTypeName</a>
                                </li>
                            }
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="League" asp-controller="Home" asp-action="Index">Leagues</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="d-flex justify-content-center">
            <a href="https://www.subspacenexus.com" class="mx-3">Subspace Nexus</a> | <a href="https://github.com/gigamon-dev/subspace-stats-db" class="mx-3">subspace-stats-db</a> | <a href="https://github.com/gigamon-dev/SubspaceServer" class="mx-3">Subspace Server .NET</a> | <a href="https://github.com/gigamon-dev/subspace-stats-web" class="mx-3">subspace-stats-web</a>
        </div>
    </footer>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
